<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="#000000">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:id="@+id/imageView4"
        android:background="@drawable/orange2"
        android:layout_weight="0.30" />

    <TextView
        android:layout_width="192dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Almost there..."
        android:id="@+id/word"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.19"
        android:textColor="@color/white"
        android:layout_marginTop="69dp"
        android:layout_below="@+id/imageView4"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="main menu"
        android:id="@+id/didimain"
        android:backgroundTint="@color/orange"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="next"
        android:id="@+id/didinext"
        android:backgroundTint="@color/orange"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/didimain"
        android:layout_toEndOf="@+id/didimain" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="prev."
        android:id="@+id/didiprev"
        android:backgroundTint="@color/orange"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/didimain"
        android:layout_toStartOf="@+id/didimain" />

</RelativeLayout>