<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="#000000">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/imageView3"
        android:src="@drawable/ora"
        android:layout_weight="0.23"
        android:layout_marginBottom="227dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="The experience you will never forget"
        android:id="@+id/colr"
        android:textColor="@color/white"
        android:layout_weight="0.14"
        android:layout_above="@+id/dakmain"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="86dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Main menu"
        android:id="@+id/twomain"
        android:backgroundTint="@color/orange"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="next"
        android:id="@+id/twonext"
        android:backgroundTint="@color/orange"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/dakmain"
        android:layout_toEndOf="@+id/dakmain" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="prev."
        android:id="@+id/twoprev"
        android:backgroundTint="@color/orange"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/dakmain"
        android:layout_toStartOf="@+id/dakmain" />

</RelativeLayout>